{
  "name": "Video Controls",
  "version": "1.2.0",
  "description": "Re-styling of Prime Video playback controls to be less intrusive.",
  "icons": {
    "128": "images/logoIcon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://primevideo.com/*",
        "https://www.primevideo.com/*",
        "https://amazon.com/*",
        "https://www.amazon.com/*",
        "https://www.amazon.jp/*",
        "https://www.amazon.co.jp/*"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "128": "images/logoIcon.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "manifest_version": 3
}